<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Possible account types -->
    <string-array name="account_types">
        <item>Checking</item>
        <item>Savings</item>
        <item>Credit Card</item>
        <item>Cash</item>
    </string-array>

    <!-- AccountTable colors, according to the types -->
    <array name="account_colors">
        <item>@color/checking_account</item>
        <item>@color/savings_account</item>
        <item>@color/credit_account</item>
        <item>@color/cash_account</item>
    </array>

    <!-- AccountTable icons, according to the types -->
    <integer-array name="account_icons">
        <item>@drawable/ic_bank</item>
        <item>@drawable/ic_safe</item>
        <item>@drawable/ic_credit_card</item>
        <item>@drawable/ic_cash</item>
    </integer-array>

    <!-- Incoming category names -->
    <string-array name="incoming_category_names">
        <item>Earnings</item>
        <item>Salary</item>
        <item>Reimbursement</item>
    </string-array>

    <!-- Incoming category colors -->
    <array name="incoming_category_colors">
        <item>@color/earnings_category</item>
        <item>@color/salary_category</item>
        <item>@color/reimbursement_category</item>
    </array>

    <!-- Outgoing category names -->
    <string-array name="outgoing_category_names">
        <item>Restaurant</item>
        <item>Groceries</item>
        <item>Electronics</item>
        <item>Gas station</item>
    </string-array>

    <!-- Outgoing category colors -->
    <array name="outgoing_category_colors">
        <item>@color/restaurant_category</item>
        <item>@color/groceries_category</item>
        <item>@color/electronics_category</item>
        <item>@color/gas_station_category</item>
    </array>

</resources>