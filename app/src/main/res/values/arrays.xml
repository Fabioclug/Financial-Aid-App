<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Possible account types -->
    <string-array name="account_types">
        <item>Checking</item>
        <item>Savings</item>
        <item>Credit Card</item>
        <item>Cash</item>
    </string-array>

    <!-- Account colors, according to the types -->
    <array name="account_colors">
        <item>@color/checking_account</item>
        <item>@color/savings_account</item>
        <item>@color/credit_account</item>
        <item>@color/cash_account</item>
    </array>

    <!-- Account icons, according to the types -->
    <integer-array name="account_icons">
        <item>@drawable/ic_bank</item>
        <item>@drawable/ic_safe</item>
        <item>@drawable/ic_credit_card</item>
        <item>@drawable/ic_cash</item>
    </integer-array>

    <!-- Category names -->
    <string-array name="category_names">
        <item>Incoming</item>
        <item>Restaurant</item>
        <item>Groceries</item>
        <item>Electronics</item>
    </string-array>

    <!-- Category colors -->
    <array name="category_colors">
        <item>@color/transaction_type_credit</item>
        <item>@color/restaurant_category</item>
        <item>@color/groceries_category</item>
        <item>@color/electronics_category</item>
    </array>

</resources>