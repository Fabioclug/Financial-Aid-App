<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    tools:context=".fragments.GroupsFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/groups_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="75dp"
        android:clipToPadding="false"
        tools:listitem="@layout/group_account_list_item"/>
    <!--android:layoutAnimation="@anim/layout_animation_fall_down_fade_in"-->

    <RelativeLayout
        android:id="@+id/obstructor"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:clickable="true"
        android:focusable="true"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/create_online_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:id="@+id/create_online_group_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:elevation="3dp"
            android:text="@string/online_group"
            android:clickable="true"
            android:focusable="true"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/create_online_group_fab"
            android:layout_width="@dimen/fab_menu_button_size"
            android:layout_height="@dimen/fab_menu_button_size"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_special_margin"
            android:layout_marginTop="@dimen/fab_special_margin"
            android:layout_marginBottom="@dimen/fab_special_margin"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_plus"
            android:tint="@android:color/white"
            app:fabSize="mini"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_offline_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|end"
        android:visibility="gone">

        <TextView
            android:id="@+id/create_offline_group_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:elevation="3dp"
            android:text="@string/offline_group"
            android:clickable="true"
            android:focusable="true"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/create_offline_group_fab"
            android:layout_width="@dimen/fab_menu_button_size"
            android:layout_height="@dimen/fab_menu_button_size"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_special_margin"
            android:layout_marginTop="@dimen/fab_special_margin"
            android:layout_marginBottom="@dimen/fab_special_margin"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_account"
            android:tint="@android:color/white"
            app:fabSize="mini"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_group_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_group"
        android:tint="@android:color/white"/>

</android.support.design.widget.CoordinatorLayout>
