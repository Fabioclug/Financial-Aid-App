<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.fclug.financialaid">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
        </activity>
        <activity
            android:name=".TransactionsActivity"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="sensorPortrait"/>
        <activity android:name=".CreateGroupActivity">
        </activity>
        <activity android:name=".CreateLocalGroupActivity">
        </activity>
        <activity android:name=".CreateGroupPaymentActivity">
        </activity>
        <activity android:name=".GroupSummaryActivity">
        </activity>
    </application>

</manifest>